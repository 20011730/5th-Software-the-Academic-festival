<style name="some_id">
<item name="android:textSize">24sp</item>
<item name="android:letterSpacing">0</item>
<item name="android:textColor">#000000</item>
</style>
  
<!-- strings.xml -->
<string name="some_id">
  \u00ef\u0080\u0087
</string>